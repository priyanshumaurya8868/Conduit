<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Conduit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/conduit_green</item>
        <item name="colorPrimaryVariant">@color/conduit_green_darker</item>
        <item name="colorOnPrimary">@color/greenish_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/conduit_green</item>
        <item name="colorSecondaryVariant">@color/conduit_green_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Conduit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Conduit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Conduit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_srcn</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/conduit_green</item>
    </style>
</resources>